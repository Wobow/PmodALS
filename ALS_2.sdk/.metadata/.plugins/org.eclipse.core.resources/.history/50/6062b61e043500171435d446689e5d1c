#include "xparameters.h"
#include "xil_types.h"
#include "xil_io.h"
#include "PmodALS.h"
#include <stdio.h>
#include "xil_cache.h"
#include "xgpio.h"
#include "xparameters.h"
#include "xstatus.h"

#define LED 0xC3
#define LED_DELAY 10000000
#define LED_CHANNEL 1
#define GPIO_DEVICE_ID XPAR_AXI_GPIO_0_DEVICE_ID

void DemoInitialize();
void DemoRun();

PmodALS ALS;
XGpio Gpio;

int main(void)
{
	Xil_ICacheEnable();

	DemoInitialize();
	DemoRun();
	return 0;
}

void DemoInitialize()
{
	int status;

	status = XGpio_Initialize(&Gpio, GPIO_DEVICE_ID);
	if (Status != XST_SUCCESS)
		return XST_FAILURE;

	XGpio_SetDataDirection(&Gpio, LED_CHANNEL, 0x00);

	ALS_begin(&ALS, XPAR_PMODALS_0_AXI_LITE_SPI_BASEADDR);

}


void DemoRun()
{
	volatile int delay;
	int light=0;
	int led = LED;
	while (1){
		light = ALS_read(&ALS);
		xil_printf("Light = %d\n\r", light);

		XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, led);
		led = ~led;
		for (delay = 0; delay < LED_DELAY; delay++);
	}
}
